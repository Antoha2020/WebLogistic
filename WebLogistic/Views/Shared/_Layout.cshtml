<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebLogistic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="topPanel">
        <nav class="navbar sticky-top  flex-md-nowrap p-0" style="background-color:#3d50b6; height:70px;">
            <a class="navbar-brand " style="margin-top:5px; margin-bottom:5px; margin-left:0px; padding-right:0px; padding-left:0px; padding-top:0px" href="#">
                <img name="img" id="img" style="margin-bottom:0px; margin-top:0px;" src="~/img/logo_white.png" alt="" width="106" height="50">
            </a>

            
            <script type="text/javascript">
                //document.getElementById("aDisp").href = "/Dispatcher/MapElectricity?login=" + localStorage.getItem("loginLast");
                //document.getElementById("aRep").href = "/Data/Index?login=" + localStorage.getItem("loginLast");
                setInterval(function () {
                    //alert("time");
                    //let days = ['ВС', 'ПН', 'ВТ', 'СР', 'ЧТ', 'ПТ', 'СБ'];
                    var date = new Date();
                    n = days[date.getDay()],
                        y = date.getFullYear(),
                        mon = date.getMonth() + 1,
                        d = date.getDate(),
                        h = date.getHours(),
                        m = date.getMinutes(),
                        s = date.getSeconds(),
                        h = (h < 10) ? '0' + h : h,
                        m = (m < 10) ? '0' + m : m,
                        s = (s < 10) ? '0' + s : s,
                        d = (d < 10) ? '0' + d : d,
                        mon = (mon < 10) ? '0' + mon : mon,
                        document.getElementById('time').innerHTML = h + ':' + m + ':' + s,
                        document.getElementById('date').innerHTML = n + " " + d + '.' + mon + '.' + y;
                    // document.getElementById('date').innerHTML = date;
                }, 1000);
            </script>

            
            <ul class="navbar-nav px-3" style="margin-right:0px;">
